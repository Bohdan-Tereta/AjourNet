@{
    Layout = null;
}

@using (Ajax.BeginForm("GetBusinessTripDataACC","ACC", new AjaxOptions { UpdateTargetId = "btsViewACC", HttpMethod = "GET"}, new { id = "formForACC" }))
{
    <div>
        @Html.DropDownList("selectedDepartment", (SelectList)ViewBag.DepartmentList, "All Departments", new { onchange = "$('#searchInputACC').val(''),$(this.form).submit();" })
       
         <input id="searchInputACC" type="search" name="searchString" value="@ViewBag.SearchString" placeholder="Search..."/>
    </div>
}

<div id="btsViewACC">
    @Html.Action("GetBusinessTripDataACC", "ACC", new { selectedDepartment = ViewBag.SelectedDepartment, searchString = ViewBag.SearchString })
</div>
