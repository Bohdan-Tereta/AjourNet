@model AjourBT.Domain.ViewModels.ErrorModel


@{
    Layout = null;
    ViewBag.Title = "Error";
}

<body>

    <a href="//ajour.ericpol.int"><span id="logo" aria-label="Ajour"></span></a>

    <p><b>@Model.statusCode. </b><ins>That's an error</ins></p>

    <div id="errorMessage">
        @{
            string message = null;
            switch (Model.statusCode)
            {
                case 404:
                    message = "The requested URL " + Model.RequestedURL + " was not found";
                    break;
                case 500:
                    message = string.Concat("Internal Server Error:<br /> ", Model.Exception.Message);
                    break;
                default:
                    message = "An error has occured";
                    break;
            }
        }

        @Html.Raw(message)
    </div>
</body>

<style type="text/css">
    ins {
        color: #777;
        text-decoration: none;
    }

    html {
        font: 15px/22px arial,sans-serif;
    }

    body {
        padding-right: 205px;
        margin: 7% auto 0px;
        max-width: 390px;
        min-height: 180px;
        padding: 30px 0px 15px;
    }

    #logo {
        background: url(../Images/AjourSystem.jpg) no-repeat scroll 0% 0% transparent;        
        display: inline-block;
        height: 108px;
        width: 108px;
    }
</style>
